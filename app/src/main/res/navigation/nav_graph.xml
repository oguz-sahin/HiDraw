<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.huawei.hidraw.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.huawei.hidraw.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_drawDetailFragment"
            app:destination="@id/drawDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.huawei.hidraw.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_drawDetailFragment"
            app:destination="@id/drawDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/drawDetailFragment"
        android:name="com.huawei.hidraw.ui.drawdetail.DrawDetailFragment"
        android:label="fragment_draw_detail"
        tools:layout="@layout/fragment_draw_detail" >
        <argument
            android:name="drawId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>
    <fragment
        android:id="@+id/createDrawFragment"
        android:name="com.huawei.hidraw.ui.createdraw.CreateDrawFragment"
        android:label="CreateDrawFragment"
        tools:layout="@layout/fragment_create_draw"/>
    <action
        android:id="@+id/action_global_createDrawFragment"
        app:destination="@id/createDrawFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />
</navigation>