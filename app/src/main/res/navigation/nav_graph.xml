<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.huawei.hidraw.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.huawei.hidraw.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_drawDetailFragment"
            app:destination="@id/drawDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.huawei.hidraw.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_drawDetailFragment"
            app:destination="@id/drawDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/drawDetailFragment"
        android:name="com.huawei.hidraw.ui.drawdetail.DrawDetailFragment"
        android:label="fragment_draw_detail"
        tools:layout="@layout/fragment_draw_detail">
        <argument
            android:name="drawId"
            android:defaultValue="-1L"
            app:argType="long" />
        <action
            android:id="@+id/action_drawDetailFragment_to_drawResultFragment"
            app:destination="@id/drawResultFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/drawDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/createDrawFragment"
        android:name="com.huawei.hidraw.ui.createdraw.CreateDrawFragment"
        android:label="CreateDrawFragment"
        tools:layout="@layout/fragment_create_draw" />


    <action
        android:id="@+id/action_global_createDrawFragment"
        app:destination="@id/createDrawFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    <fragment
        android:id="@+id/drawResultFragment"
        android:name="com.huawei.hidraw.ui.drawresult.DrawResultFragment"
        android:label="DrawResultFragment" >
        <argument
            android:name="isScreenRecordTake"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="drawId"
            app:argType="long"
            android:defaultValue="-1L" />
        <action
            android:id="@+id/action_drawResultFragment_to_drawDetailFragment"
            app:destination="@id/drawDetailFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/drawResultFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>